<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="cn.com.nggirl.bigimagetestapp.viewpager.ViewPagerTestActivity">

    <cn.com.nggirl.bigimagetestapp.viewpager.widget.VerticalViewPager
        android:id="@+id/vertical_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:clipChildren="false"/>

    <cn.com.nggirl.bigimagetestapp.viewpager.widget.CopyViewPager
        android:id="@+id/copy_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
